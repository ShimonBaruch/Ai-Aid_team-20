pipeline {
    agent {
        docker {
            image 'docker:19.03.12'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Test Docker') {
            steps {
                script {
                    docker.withServer('tcp://localhost:2375') {
                        sh 'docker --version'
                    }
                }
            }
        }
    }
}
